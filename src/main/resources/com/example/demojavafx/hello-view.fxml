<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demojavafx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Bienvenidos a El juego de la Vida" textAlignment="CENTER" textFill="RED">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <Label fx:id="welcomeText" />
    <Button mnemonicParsing="false" onAction="#onMiBotonNuevaVentajaClick" text="Cargar Juego (abre Ventana)" />
    <Button layoutX="85.0" layoutY="420.0" mnemonicParsing="false" onAction="#onMiBotonNuevaVentanaAjustesClick" text="Nuevo Juego" textFill="#92229d" />
</VBox>
